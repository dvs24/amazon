{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "strict": true,
    "skipLibCheck": true, // Optionally ignore type-checking of libraries
    "typeRoots": ["./node_modules/@types"], // Ensure this is present
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
